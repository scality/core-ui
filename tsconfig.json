{
    "include": ["src/**/*"],
    "exclude": ["src/**/*.test.*", "node_modules/*", "node_modules/@types/**/*"],
    "compilerOptions": {
      "module": "esnext",
      "declaration": true, // Generate d.ts files
      "allowSyntheticDefaultImports": true, // Allow import React from 'react'
      "jsx": "react-jsx",
      "target": "es2021",
      "outDir": "dist",
      "declarationMap": true, // go to js file when using IDE functions like "Go to Definition" in VSCode
      "lib": ["ESNext", "dom"],
      "types": [], // https://stackoverflow.com/questions/51634361/how-to-force-tsc-to-ignore-node-modules-folder
      "skipLibCheck": true, // does not check types in node_modules
      "moduleResolution": "node",
    }
  }
  